{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container-fluid contact_us_bg_img">
        <div class="container">
            <div class="row">
                <a href="#" class="fh5co_con_123"><i class="fa fa-sign-in"></i></a>
                <a href="#" class="fh5co_con pt-2"> Sign in </a>
            </div>
        </div>
    </div>

    <div class="container-fluid pt-3">
        <div class="container" data-animate-effect="fadeIn">
            <div class="row pb-4">
                <div class="col-md-6">
                    {{ form_start(registrationForm) }}

                    {% if not registrationForm.vars.valid %}
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-md-10">
                                <div class="alert alert-danger">
                                    {{ 'validation_title' | trans }}
                                    {{ form_errors(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    {% endif %}


{#                    {{ form_row(registrationForm.agreeTerms) }}#}

                    <div class="col-12 pt-2">
                        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
                    </div>
                    <div class="col-12 py-3">
                        {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control fh5co_contact_text_box'} }) }}
                        <div class="alert alert-danger">
                            {{ form_errors(registrationForm.username) }}
                        </div>
                    </div>
                    <div class="col-12 py-3">
                        {{ form_row(registrationForm.phone, { 'attr': {'class': 'form-control fh5co_contact_text_box'} }) }}
                        {{ form_errors(registrationForm.phone) }}
                    </div>
                    <div class="col-12 py-3">
                        {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control fh5co_contact_text_box'} }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
{#                    <div class="col-12 py-3">#}
{#                        {{ form_row(registrationForm.password, { 'attr': {'class': 'form-control fh5co_contact_text_box'} }) }}#}
{#                    </div>#}


                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <div class="col-12 py-3 text-center">
                        <button class="btn btn-lg contact_btn" type="submit">
                            Register
                        </button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
                <div class="col-md-6 animate-box">
                    <a href="single.html" class="fh5co_magna py-2"> Magna aliqua ut enim ad minim veniam quis
                        nostrud quis xercitation ullamco. </a> <a href="single.html" class="fh5co_mini_time py-3">
                        Thomson Smith -
                        April 18,2016 </a>
                    <div class="fh5co_consectetur"> Amet consectetur adipisicing elit, sed do eiusmod tempor incididunt
                        ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
